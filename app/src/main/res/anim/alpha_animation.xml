<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        android:fromAlpha
        Float. 设置透明度的初始值，其中0.0是透明，1.0是不透明的。

        android:toAlpha
        Float. 设置透明度的结束值，其中0.0是透明，1.0是不透明的。
    -->

    <alpha
        android:duration="2000"
        android:fromAlpha="1.0"
        android:toAlpha="0.0" />

</set>
